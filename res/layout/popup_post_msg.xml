<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f1f1"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#cdcdcd"
        android:orientation="vertical" >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:background="#ffffff"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/textView_pop_up_desc_itemtitle_post_msg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:text="Post your message here"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:typeface="serif" />

                <ImageView
                    android:id="@+id/imageView_dispute_upload_send_msg"
                    android:layout_width="25dp"
                    android:layout_height="20dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="5dp"
                    android:contentDescription="@string/description"
                    android:src="@drawable/send2_msg" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="61dp"
                android:background="#f4f4f4"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/textView1_pop_up_post_sub"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:text="Subject"
                    android:textSize="15sp"
                    android:typeface="sans" />

                <EditText
                    android:id="@+id/editText1_subject_pop_up_post_sub"
                    style="@style/CustomEditText_SendMsg"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/textView1_pop_up_post_sub"
                    android:layout_below="@+id/textView1_pop_up_post_sub"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:ems="10" >

                    <requestFocus />
                </EditText>

                <TextView
                    android:id="@+id/textView1_pop_up_post_msg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/editText1_subject_pop_up_post_sub"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:text="Message"
                    android:textSize="15sp"
                    android:typeface="sans" />

                <EditText
                    android:id="@+id/editText1_subject_pop_up_post_msg"
                    style="@style/CustomEditText_SendMsg"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/textView1_pop_up_post_msg"
                    android:layout_below="@+id/textView1_pop_up_post_msg"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:ems="10"
                    android:inputType="textMultiLine" >
                </EditText>

                <TextView
                    android:id="@+id/textView1_pop_up_post_msg_1_empty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/editText1_subject_pop_up_post_msg"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:text=""
                    android:textSize="15sp"
                    android:typeface="sans" />
            </RelativeLayout>
        </FrameLayout>
    </LinearLayout>

</LinearLayout>