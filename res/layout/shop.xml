<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff" >

    <View
        android:id="@+id/view2"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="#000000" />
    
     <LinearLayout
          android:id="@+id/shop_info_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" >

         <Button
             android:id="@+id/button1"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_weight="0.42"
             android:text="Policies" />

         

         <Button
             android:id="@+id/button2"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_weight="0.23"
             android:text="Announcement" />
    </LinearLayout>
    <View
             android:id="@+id/view1"
             android:layout_width="fill_parent"
             android:layout_height="1px"
             android:background="#000000"
             android:layout_below="@+id/shop_info_layout" />

    <RelativeLayout
       
         android:id="@+id/shop_info_policy_layout"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="@+id/shop_info_layout"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/shop_info_layout" >
            <ScrollView
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:background="#00000000" >
         <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="14dp"
            android:textColor="#000000"
            android:text="TextView1" />
         </ScrollView>
        
    </RelativeLayout>
    <RelativeLayout
         android:id="@+id/shop_info_announcment_layout"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="@+id/shop_info_layout"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/shop_info_layout"
        android:visibility="gone"
         >
 <ScrollView
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:background="#00000000" >
       
             <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="14dp"
            android:textColor="#000000"
            android:text="TextView2" />
             </ScrollView>
        
        
    </RelativeLayout>

</LinearLayout>
